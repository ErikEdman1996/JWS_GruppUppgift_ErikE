<configuration status="warn">
    <properties>
        <property name="LOG_PATTERN_GENERAL">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</property>
        <property name="LOG_DIR">logs</property>
    </properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{HH:mm:ss.SSS}}{cyan} [%style{%t}{magenta}] %highlight{%-5level} %style{%logger{36}}{blue} - %msg%n" />
        </Console>
        <RollingFile name="AppFile" fileName="${LOG_DIR}/app.log"
                     filePattern="${LOG_DIR}/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN_GENERAL}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="BookingFile" fileName="${LOG_DIR}/booking.log"
                     filePattern="${LOG_DIR}/booking-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %highlight{%-5level} %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="TravelFile" fileName="${LOG_DIR}/travel.log"
                     filePattern="${LOG_DIR}/travel-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %highlight{%-5level} %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
        </RollingFile>
    </appenders>
    <loggers>

        <logger name="BookingLogger" level="info" additivity="false">
            <appender-ref ref="BookingFile"/>
        </logger>

        <logger name="TravelLogger" level="info" additivity="false">
            <appender-ref ref="TravelFile"/>
        </logger>

        <root level="info">
            <appender-ref ref="Console"/>
            <appender-ref ref="AppFile"/>
        </root>
    </loggers>
</configuration>